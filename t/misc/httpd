use HTTP::Daemon ();

my $s = HTTP::Daemon->new();
die "Can't create daemon: $!" unless $s;

print $s->url, "\n";

my $c = $s->accept;
die "Can't accept" unless $c;

$c->timeout(60);
my $req = $c->get_request;

die "No request" unless $req;

my $abs = $req->uri->abs;

print $req->as_string;

$c->send_file_response("/etc");

